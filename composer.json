{
    "name": "tarnawski/coverage-checker",
    "description": "Extract code coverage value from PHPUnit metrics.",
    "keywords": ["phpunit", "coverage", "checker", "threshold"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomasz Tarnawski",
            "email": "tarnawski27@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "CoverageChecker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoverageChecker\\Tests\\": "tests/"
        }
    },

    "require": {
        "php": "^8.2",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "phpstan/phpstan": "^1.12",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "bin": ["bin/coverage-checker", "bin/coverage-printer"]
}
